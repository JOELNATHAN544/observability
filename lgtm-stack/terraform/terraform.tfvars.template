# ------------------------------------------------------------------------------
# GCP & Cluster Configuration
# ------------------------------------------------------------------------------
project_id       = "your-project-id"
region           = "us-central1"
cluster_name     = "your-cluster-name"
cluster_location = "us-central1-a"

# ------------------------------------------------------------------------------
# Environment & Domain
# ------------------------------------------------------------------------------
environment       = "production"
monitoring_domain = "observe.example.com"
letsencrypt_email = "admin@example.com"

# ------------------------------------------------------------------------------
# Kubernetes Configuration
# ------------------------------------------------------------------------------
namespace                = "observability"
k8s_service_account_name = "observability-sa"
gcp_service_account_name = "gke-observability-sa"

# ------------------------------------------------------------------------------
# Modular Components (Adoption or New Install)
# ------------------------------------------------------------------------------
# 1. Cert-Manager
# Set install_cert_manager = true to install OR adopt existing.
install_cert_manager      = false
cert_manager_release_name = "cert-manager"
cert_manager_namespace    = "cert-manager"
cert_issuer_name          = "letsencrypt-prod"
cert_issuer_kind          = "ClusterIssuer"

# 2. Ingress Controller
# Set install_nginx_ingress = true to install OR adopt existing.
install_nginx_ingress      = false
nginx_ingress_release_name = "nginx-monitoring"
nginx_ingress_namespace    = "ingress-nginx"
ingress_class_name         = "nginx"

# ------------------------------------------------------------------------------
# Application Configuration
# ------------------------------------------------------------------------------
grafana_admin_password = "supersecretpassword"
loki_schema_from_date  = "2024-01-01"

# ------------------------------------------------------------------------------
# Component Versions (Optional Overrides)
# ------------------------------------------------------------------------------
loki_version       = "6.6.4"
mimir_version      = "5.5.0"
tempo_version      = "1.57.0"
prometheus_version = "25.27.0"
grafana_version    = "10.3.0"
